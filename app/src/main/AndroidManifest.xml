<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guardianapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuardianApi">
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.article.searcharticle.SearchArticleFragment"
            android:exported="false"
            android:theme="@style/Theme.GuardianApi.NoToolbar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GuardianApi.NoToolbar" />
        <activity
            android:name=".ui.webview.WebViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.article.articlebysection.ArticleListSectionFragment"
            android:exported="false" />
        <activity
            android:name=".ui.article.articlelist.ArticleListFragment"
            android:exported="false" />
    </application>

</manifest>